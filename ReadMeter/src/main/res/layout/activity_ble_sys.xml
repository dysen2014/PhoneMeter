        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_btn_2"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/square_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/img_wid"
                android:layout_height="@dimen/img_hei"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_btn_3"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/square_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/img_wid"
                android:layout_height="@dimen/img_hei"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_btn_1"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/square_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/img_wid"
                android:layout_height="@dimen/img_hei"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_btn_2"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/square_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/img_wid"
                android:layout_height="@dimen/img_hei"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_btn_3"
            android:gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/square_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/img_wid"
                android:layout_height="@dimen/img_hei"
                android:background="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/item_header"
            layout="@layout/item_bottom" />
    </LinearLayout>

</LinearLayout>