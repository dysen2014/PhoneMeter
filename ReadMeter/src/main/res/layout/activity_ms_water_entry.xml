<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dysen.type.meterSys.MListActivity"
    android:id="@+id/main"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/item_header"
            layout="@layout/item_top" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@drawable/blg" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_entry_up"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@drawable/ddy_color3"
                android:layout_margin="8dp"
                android:text="上一户"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:textColor="@color/whitesmoke"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/card_pic">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_user_name"
                        android:layout_centerVertical="true"
                        android:text="用户姓名:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_read_meter_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_read_meter_status"
                        android:layout_centerVertical="true"
                        android:text="读表状态:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_entry_user_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_user_num"
                        android:layout_centerVertical="true"
                        android:text="用户编号:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_user_phone"
                        android:layout_centerVertical="true"
                        android:text="用户电话:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_user_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_user_addr"
                        android:layout_centerVertical="true"
                        android:text="用户地址:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/violet"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_entry_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_user"
                        android:layout_centerVertical="true"
                        android:text=":"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_entry_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"
                        android:hint="抄表状况"
                        android:cursorVisible="false" />

                    <com.dysen.myUtil.view.MyTextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_info"
                        android:layout_centerVertical="true"
                        android:text="抄表明细:"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_meter_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_meter_num"
                        android:layout_centerVertical="true"
                        android:text="表具编号:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/et_entry_last_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:focusable="false"
                    android:digits="@string/login_name"
                    android:textSize="@dimen/text_size_16"
                    android:background="#0000"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_entry_last_volume"
                    android:layout_centerVertical="true"
                    android:text="上期用量:"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_last"
                        android:layout_centerVertical="true"
                        android:text="本月起码:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_this"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:inputType="number"
                        android:focusable="false"
                        android:maxLength="9"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_this"
                        android:layout_centerVertical="true"
                        android:text="本月止码:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/et_entry_this_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="90dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:focusable="false"
                        android:digits="@string/login_name"
                        android:textSize="@dimen/text_size_16"
                        android:background="#0000"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/et_entry_this_volume"
                        android:layout_centerVertical="true"
                        android:text="月使用量:"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_entry_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ddy_color3"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:text="下一户"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:textColor="@color/whitesmoke"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="#d1d4d9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_entry_operation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg2"
                    android:onClick="btnOperation"
                    android:text="操作"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_22"/>

                <EditText
                    android:id="@+id/et_entry_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:focusable="false"
                    android:inputType="number"
                    android:maxLength="9"
                    android:text=""
                    android:layout_margin="@dimen/btn_"
                    android:textSize="@dimen/text_size_18"/>
                <LinearLayout
                    android:id="@+id/entry_del"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/btn_"
                    android:background="@drawable/btn_bg2"
                    android:orientation="horizontal"
                    android:gravity="center">
                <Button
                    android:id="@+id/btn_entry_del"
                    android:layout_width="@dimen/layout_48"
                    android:layout_height="@dimen/layout_48"
                    android:background="@drawable/num_del"
                    android:textSize="@dimen/text_size_18"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_entry_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn1"
                    android:text="1"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn2"
                    android:text="2"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn3"
                    android:text="3"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn4"
                    android:text="4"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn5"
                    android:text="5"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_entry_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn6"
                    android:text="6"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn7"
                    android:text="7"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn8"
                    android:text="8"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
                <Button
                    android:id="@+id/btn_entry_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn9"
                    android:text="9"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>

                <Button
                    android:id="@+id/btn_entry_0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:onClick="btn0"
                    android:text="0"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_entry_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg2"
                    android:onClick="btnUp"
                    android:text="上一户"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_22"/>

                <Button
                    android:id="@+id/btn_entry_next"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg2"
                    android:onClick="btnNext"
                    android:text="下一户"
                    android:layout_margin="@dimen/btn_"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_22"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/item_header"
            layout="@layout/item_bottom" />
    </LinearLayout>

</LinearLayout>
