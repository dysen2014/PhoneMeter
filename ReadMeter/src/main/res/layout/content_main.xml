<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rowCount="3"
    app:columnCount="2"
    android:background="@drawable/blg">

    <LinearLayout
        android:id="@+id/ll1_btn_wireless_auto_meter_read"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:onClick="btnWAMR"
        android:orientation="vertical"
        android:background="@drawable/square_line"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:background="@drawable/read_wmeter_home"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="抄表系统"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_alertor"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:onClick="btnDataSM"
        android:orientation="vertical"
        android:background="@drawable/square_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:background="@drawable/iot_home"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="数据系统"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll1_btn_bind"
        android:background="@drawable/square_line"
        android:gravity="center"
        android:onClick="systemSet"
        android:orientation="vertical"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <!-- android:onClick="btnWifi" -->

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_set" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="系统设置"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:onClick="btnAbout"
        android:orientation="vertical"
        android:background="@drawable/square_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:background="@drawable/about_home"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="联系我们"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3_1"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:orientation="vertical"
        android:background="@drawable/square_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3_2"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:orientation="vertical"
        android:background="@drawable/square_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/img2_wid"
            android:layout_height="@dimen/img2_hei"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>



</android.support.v7.widget.GridLayout>

